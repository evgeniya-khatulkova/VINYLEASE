 <%= simple_form_for [@user, @record] do |f| %>
      <%= f.input :title %>
      <%= f.input :artist %>
      <%= f.input :genre, as: :select, collection: Record::GENRES, input_html: {class: "rounded"} %>
      <%= f.input :price, :label => "Price per day", as: :integer, input_html: {min: '0', step: '1'} %>
      <%= f.input :location, :label => "Pick-up location" %>
      <%= f.submit "Add record", class: "btn btn-outline-secondary rounded-pill" %>
<% end %>
