<div class="header">
  <h1>My reservations</h1>
</div>

<ul id="reservaation-ul" class="p-0" >
  <% current_user.reservations.each do |reservation| %>
   <%# # <% reservation.status = "pending" %>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <li>from: <%= reservation.start_date%> <br>
          to: <%= reservation.end_date%><br>
          album:<%= reservation.record.title%> </li>
          total amount to pay:<%= days = (reservation.end_date - reservation.start_date).to_i
                                  if days < 1
                                    days = days + 1
                                  end
                                  days * reservation.record.price %> $ <br>
          status:  <% if current_user.id == reservation.user_id %>
                      <% if reservation.status == nil %>
                          pending  | COSTUMER |
                          <%= link_to "delete reservation", reservation_path(reservation), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
                      <% else %>
                          <%= reservation.status %>
                      <% end %>
                    <% end %>
    </div>
    </div>
  <% end %>
    <div class="button"><%= link_to "All vinyls", root_path%></div>
</ul>

<div class="header">
  <h1>Incoming reservations</h1>
</div>

<ul id="reservaation-ul" class="p-0" >
  <% current_user.records.each do |record| %>
      <% record_specific = record.title %>
        <% record.reservations.each do |reservation| %>
          <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
           <div class="card-product-infos">
              <%= record_specific %>
              <%= reservation.user.email %>
              <%= reservation.end_date %>
                <% if reservation.status == nil %>
                  pending  | OWNER |
                    <%= link_to "accept request", reservations_path(status: "accepted", reservation_id: reservation.id) %> or
                    <%= link_to "cancel request", reservations_path(status: "cancelled",  reservation_id: reservation.id) %>
                <% else %>
                    <%= reservation.status %>
                <% end %>
                </div>
            </div>
          <% end %>
        <% end %>
</ul>
