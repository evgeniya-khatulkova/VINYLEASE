  <div class="container-fluid">
    <div class="logo">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "icons8-record-player-80 (1).png" %>
    <% end %>
    <h2>VINYLEASE</h2>
    </div>

    <form class="d-flex">
        <input class="form-control me-2 rounded-pill" type="search" placeholder="Search" aria-label="Search">
